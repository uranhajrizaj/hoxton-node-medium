// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  image    String?
  posts    Post[]
  comments Comment[]
  likes    Like[]
}

model Post {
  id       Int       @id @default(autoincrement())
  title    String
  message  String
  user     User?     @relation(fields: [usersId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  usersId  Int?
  comments Comment[]
  likes    Like[]
}

model Like {
  id         Int      @id @default(autoincrement())
  Posts      Post?    @relation(fields: [postsId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postsId    Int?
  Comments   Comment? @relation(fields: [commentsId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  commentsId Int?
  users      User?    @relation(fields: [usersId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  usersId    Int
}

model Comment {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [usersId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  message String
  usersId Int
  likes   Like[]
  Post    Post   @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId  Int
}
